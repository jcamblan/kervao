= content_tag :footer, id: "contactus", class: "contactus container-fluid bg-#{bg} py-5 px-1 text-center text-light"
  h2.mb-5.mx-auto
    = t("contact.h2")
  .row.px-0.mx-auto
    .col.col-lg-3.ml-auto
      .d-flex.flex-column.justify-content-center
        i.far.fa-2x.fa-envelope
        p.mt-2
          | Jean-Pierre & Gis√®le MADEC
          br
          | 23 rue Kervao
          br
          | 29830 PLOUDALMEZEAU
      .text-light.d-flex.flex-column.justify-content-center
        i.fas.fa-2x.fa-phone
        p.mt-2 02.98.48.65.63
      .text-light.d-flex.flex-column.justify-content-center
        i.fas.fa-2x.fa-at
        p.mt-2 gjpmadec@wanadoo.fr
    .col.col-lg-5.mr-auto
      form.text-left
        .form-group
          .form-check.form-check-inline
            = t("contact.form.reason")
            | &nbsp;
            input#inlineRadio1.form-check-input name="inlineRadioOptions" type="radio" value="option1" /
            label.form-check-label for="inlineRadio1"
              = t("contact.form.information")
            | &nbsp;
            input#inlineRadio2.form-check-input name="inlineRadioOptions" type="radio" value="option2" /
            label.form-check-label for="inlineRadio2"
              = t("contact.form.booking")
        .form-group
          input#exampleInputEmail1.form-control aria-describedby="emailHelp" placeholder=("Votre nom") type="email" /
        .form-group
          input#exampleInputEmail1.form-control aria-describedby="emailHelp" placeholder=("Votre adresse mail") type="email" /
        .form-group
          textarea#exampleFormControlTextarea1.form-control placeholder=("Votre message") rows="3" 
        = button_tag t("contact.form.submit"), class: "btn btn-#{bg}", role: "button"